""
"" This vimrc holds base editing setup, such as showing line number, highlighting search results, etc...
""


" ----------------------------
" Tab and whitespace settings.
"
set tabstop=4
set shiftwidth=4
set expandtab


" ----------------------------
" Highlight trail whitespaces.
"
set listchars=trail:Â·
set list


" ------------
" Map leader.
"
let mapleader = " "


" ---------
" Map keys.
"
imap jj <esc>

nmap kk :call YimUI_ShowKeyMapping()<cr>

nmap w :call YimText_RemoveTrailSpaces() <bar> :w!

nmap f zo
nmap ff zc
nmap F zR
nmap FF zM

nmap t :tabnew<cr>
nmap tt :tabclose<cr>

nmap <leader>1 :call YimBuffer_SetPageScrollKeyMapping()<cr>
nmap <leader>2 :call YimBuffer_SetTabSwitchKeyMapping()<cr>
nmap <leader>3 :call YimBuffer_SetWindowResizeKeyMapping()<cr>

nmap g :call YimBuffer_SetColorColumns(72, 79, 99)<cr>
nmap gg :set colorcolumn=<cr>

let g:work_sess_dir=$YIM_TEMP_DIRPATH
nmap sd :echo 'Working session directory: ' . g:work_sess_dir<cr>

nmap m :execute 'DoMatchParen'<cr>
nmap mm :execute 'NoMatchParen'<cr>


" --------------
" Misc settings.
"
set number  " Show line number.
set hlsearch  " Highligh search results.
set laststatus=2  " Display status line.
set statusline=%!YimBuffer_SetStatusLine()
call YimBuffer_SetWorkingSessionDirectory()

